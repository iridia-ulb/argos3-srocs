<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="5" random_seed="12345" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="pipuck">
      <actuators>
        <pipuck_differential_drive implementation="default"/>
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <pipuck_rangefinders implementation="default" show_rays="true" />
        <pipuck_differential_drive implementation="default" />
        <pipuck_ground implementation="default" show_rays="true" />
        <wifi implementation="default" />
      </sensors>
      <params script="@CMAKE_BINARY_DIR@/testing/pi-puck/calibrate_pipuck.lua" />
    </lua_controller>

    <lua_controller id="block">
      <actuators>
        <directional_leds implementation="default" />
        <radios implementation="default"/>
      </actuators>
      <sensors>
        <radios implementation="default" show_rays="true"/>
      </sensors>
      <params />
    </lua_controller>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="1, 1, 1" center="0, 0, 0.25">
    <floor id="floor" source="image" pixels_per_meter="10000"
           path="@CMAKE_BINARY_DIR@/testing/pi-puck/calibrate_pipuck.png" />
    <box id="north" size="0.025,0.975,0.06" movable="false" mass="10">
      <body position="0.4875,0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="east" size="0.975,0.025,0.06" movable="false" mass="10">
      <body position="0.0125,-0.4875,0"  orientation="0,0,0" />
    </box>
    <box id="south" size="0.025,0.975,0.06" movable="false" mass="10">
      <body position="-0.4875,-0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="west" size="0.975,0.025,0.06" movable="false" mass="10">
      <body position="-0.0125,0.4875,0"  orientation="0,0,0" />
    </box>
    <pipuck id="pipuck" debug="true">
      <body position="0,0,0" orientation="0,0,0"/>
      <controller config="pipuck"/>
    </pipuck>

    <block id="block0">
      <body position="0.125,0,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>

    <!--block id="block1">
      <body position="0.25,0,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block-->

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="25" default_friction="1">
      <gravity g="9.8" />
      <floor friction="1" />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->

  <visualization>
    <qt-opengl lua_editor="true">
      <camera>
        <placement idx="0" position="0,0,1" look_at="0.0,0.0,0.125" up="1,0,0" lens_focal_length="40" />
        <placement idx="1" position=" 0,  -2.5,1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="2" position=" 2.5,-2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="3" position=" 2.5, 0,  1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="4" position=" 2.5, 2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="5" position=" 0,   2.5,1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="6" position="-2.5, 2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="7" position="-2.5, 0,  1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="8" position="-2.5,-2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
      </camera>
    </qt-opengl>
  </visualization>


</argos-configuration>
